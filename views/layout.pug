doctype html
html
  head
    if (subtitle)
      title= "Recurr | " + subtitle
    else 
      title Recurr
      
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="shortcut icon" type="image/jpg" href="/images/icon.png")

    script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
    script(defer src="https://use.fontawesome.com/releases/v5.14.0/js/all.js")
    script(src='/javascript/modal.js')
    script(src="javascript/tabs.js")
    script(src="/javascript/layout.js")

  body
    nav.navbar.has-background-white-ter.mb-4(role="navigation" aria-label="main navigation")
      .navbar-brand
        a.navbar-item(href="/") 
          img(src="/images/Logo/brand.png" alt="Recurr")
        a.navbar-burger(role="button" aria-label="menu" aria-expanded="false" data-target="main-nav")
          span(aria-hidden="true")
          span(aria-hidden="true")
          span(aria-hidden="true")

      #main-nav.navbar-menu
        .navbar-start.is-hidden-tablet
          a.navbar-item(href="/user") User acounts
          a.navbar-item(href="/authentication/logout") Log out
        
        .navbar-end
          if user
            .navbar-item
              .buttons.is-hidden-mobile
                a.button.is-warning.is-light(href="/user")
                  i.fas.fa-user
                a.button.is-primary.is-light(href="/authentication/logout")  
                  i.fas.fa-sign-out-alt
        

    .container 
      block content
